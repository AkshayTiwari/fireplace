@import 'lib';

.listing {
    margin-bottom: 10px;
    .loadmore {
        margin-bottom: -10px;
    }
    li.item {
        background: #fff;
        border: 1px solid $seavan-salt-white;
        border-radius: 5px;
        margin: 10px 10px 0;
        position: relative;
    }
    .mkt-tile + .tray {
        border-radius: 0 0 5px 5px;
    }
}

@media $at-least-desktop {
    #search-results {
        padding: 40px 0;
    }
    .listing {
        li {
            &.item, &.loadmore {
                margin: 25px 0 0;
            }
            &.loadmore {
                margin-bottom: -25px;
            }
            &.item:hover {
                border-color: darken($seavan-salt-white, 10%);
            }
            a {
                position: static;
            }
        }
        .mkt-tile {
            background: none;
            padding: 20px 20px 20px 108px;
            .icon {
                left: 20px;
            }
            .author {
                color: $ship-grey;
                font-weight: 600;
            }
        }
    }

    .mkt-tile + .tray {
        position: relative;
        background: $salt-flat-white;
    }
    .tray {
        .dots {
            bottom: 20px;
            z-index: 1;
        }
        .dot {
            cursor: pointer;
        }
    }

    .grid .mkt-tile {
        &.category {
            background: $grain-src rgba(255,255,255,.3);
            // EVIL- kills page perf. Don't do this.
            /*background-size: 10px 10px;*/
            h3 {
                light-text-shadow();
                color: $medium-gray;
                font-weight: 400;
            }
            &:hover, &:active {
                background-color: rgba(255,255,255,.6);
                h3 {
                    color: $dark-gray;
                }
            }
            &:active {
                depressed();
            }
        }
    }
}
