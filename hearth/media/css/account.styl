@import 'lib';


#account-settings .toggles {
    padding: 15px;
}

#page .account-settings {
    padding: 15px;
    .form-footer {
        text-align: center;
        button {
            margin-bottom: 1em;
        }
        .extras button {
            float: none;
            width: 100%;
        }
    }
}
.account {
    h2 {
        display: none;
        margin-bottom: 15px;
    }
    footer {
        padding: 15px;
    }
}

#feedback-overlay section {
    width: 450px;
}

// Does not work with $desktop.
@media $at-least-desktop {
    .account h2 {
        display: block;
    }
    // TODO: This has to be fixed properly.
    body[data-page-type=leaf] #page .main.account {
        background-color: transparent;
    }
    .toggles {
        display: none;
    }
}
