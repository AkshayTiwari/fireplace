collection_background_colors($color) {
    background-color: rgba($color, 0.55);

    &[data-collection-landing-is-listing] {
        background: none;
    }
    .feed-landing-header .collection-listing-desc,
    .collection-landing-curve,
    .collection-landing-header-mobile .curve,
    .collection-listing-header {
        background-color: $color;
    }

    @media $base-tablet {
        background-color: rgba($color, 0.85);

        &[data-collection-landing-is-listing] {
            background-color: rgba($color, 0.85);
        }
    }
}
