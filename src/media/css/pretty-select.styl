@import "lib";

$select-height = 30px;

.pretty-select {
    border: 1px solid $greyscale-grey;
    border-radius: 5px;
    font-weight: normal;
    font-size: 20px;
    height: $select-height;

    // Above styles are defined separately in Transonic.
    cursor: pointer;
    display: inline-block;
    padding: 0;
    overflow: hidden;
    position: relative;

    &:before {
        // Custom dropdown arrow
        background: none;
        color: $drop-arrow;
        content: '\25BC';
        display: inline-block;
        font-size: 10px;
        height: 15px;
        margin-left: 10px;
        pointer-events: none;
        position: absolute;
        right: -2px;
        top: 8px;
        width: 25px;
        z-index: 2;
    }
    select {
        -moz-appearance: none;
        -webkit-appearance: none;
        -moz-padding-start: 10px;
        -webkit-padding-start: 10px;
        background: $white;
        border: 0;
        border-radius: 5px;
        box-shadow: none;
        cursor: pointer;
        height: $select-height;
        max-width: none;
        min-width: 229px;
        outline: 0;

        &:-moz-focusring {
            color: $filters-label;
            text-shadow: 0 0 0 $white;
        }
    }
    option {
        background: $white;
        color: $greyscale-black;
        padding: 5px;
    }
}
