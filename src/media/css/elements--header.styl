/*
    Marketplace Header. Acts as a nav for desktop.
*/
@import 'lib';

$color--header--child-bg = #1A95FC;
$color--nav--child-bg = #1A95FC;
$color--nav--child-hover = #40ADFF;
$color--nav--root-link = $greyscale-black;
$header--height = 60px;
$header--transition = 'transform cubic-bezier(0.455, 0.03, 0.515, 0.955) 250ms';
$zindex--header-child = 60;
$zindex--header-nav= 70;

mkt-header--showing-child() {
    .mkt-header--showing-child & {
        {block}
    }
}


mkt-header {
    z-index: $zindex--header-nav;
}

mkt-header-nav {
    align-items: center;
    flex-grow: 2;
    flex-wrap: wrap;
    display: none;
    height: $nav--header-height;
    margin: 0 auto;
    max-width: 1000px;
    list-style: none inside;
    justify-content: space-around;
    order: 3;
    overflow: hidden;
    padding: 10px 30px;
    position: relative;
    width: fit-content;

    +media--wide-tablet() {
        display: flex;
    }
}

.mkt-header-nav--link {
    background: transparent;
    border-radius: 5px;
    color: $color--nav--root-link;
    font-weight: 300;
    line-height: 1;
    padding: 10px;
    transition: background-color .05s linear, color .05s linear;

    &:hover {
        background-color: $color--nav--child-hover;
        color: $greyscale-white;
        text-decoration: none;
    }
    &.mkt-header-nav--link-active {
        background: $color--nav--child-bg;
        color: $greyscale-white;

        +mkt-header--showing-child() {
            background: transparent;
            color: $color--nav--root-link;
        }
    }
}

mkt-header-child {
    background: $color--header--child-bg;
    display: flex;
    flex-wrap: wrap;
    height: auto;
    left: 0;
    justify-content: center;
    min-height: $header--height;
    opacity: 0;
    overflow: hidden;
    padding: 10px 5%;
    position: absolute;
    top: 60px;
    transform: translateY(-100%);
    transition: unquote($header--transition + ', opacity 0s linear 300ms');
    width: 100%;
    z-index: $zindex--header-child;

    &.mkt-header-child--visible {
        opacity: 1;
        transform: translateY(0);
        transition: unquote($header--transition);
    }
}

.mkt-header-child--link-list {
    display: flex;
    list-style: none;
    justify-content: space-around;
    width: 100%;
}

[data-header-child--input] input,
.header-child--input-placeholder {
    color: $greyscale-white;
    font: 300 26px/28px $primary-font-family;
    line-height: normal;
}

[data-header-child--input] input {
    border: 0;
    border-radius: 5px;
    height: 100%;
    min-width: $mobile-content-width + 10;
    padding: 15px 0 15px 50px;
    outline: none;
    width: 50%;
    z-index: 2;

    &:valid + .header-child--input-placeholder {
        display: none;
    }
}

.header-child--input-placeholder {
    display: inline;
    left: 50%;
    margin: 0 0 0 25px;
    min-width: 250px;
    opacity: .8
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
}

.mkt-header-child--item {
    display: inline-block;
    margin: 5px 0;
    padding: 10px;
}

.mkt-header-child--link {
    background: transparent;
    border-radius: 5px;
    color: $greyscale-white;
    font-weight: 300;
    line-height: 1;
    padding: 9px 9px 6px;
    transition: all .1s linear;

    &:hover {
        color: $action-positive;
        background: $greyscale-white;
        text-decoration: none;
    }
}

.mkt-nav--visible mkt-header-child {
    display: none;
}

mkt-header-child-toggle {
    cursor: pointer;
}

mkt-header-nav mkt-header-child-toggle.mkt-header-child--visible .mkt-header-nav--link {
    background: $color--nav--child-bg;
    color: $greyscale-white;
}

.mkt-header--actions {
    display: flex;
    margin-right: 5px;
    order: 5;

    mkt-header-child-toggle:not(:first-child) {
        margin-left: 30px;
    }
}

.mkt-header--actions-link {
    border-radius: 5px;
    border: 2px solid $action-positive;
    display: none;
    padding: 10px;
    order: 2;
    transition: all .1s linear;

    &:hover {
        color: $greyscale-white;
        background: $action-positive;
        text-decoration: none;
    }
    &:not(:last-child) {
        margin-right: 10px;
    }
}

@media $wide-tablet {
    .mkt-nav--visible mkt-header-child {
        display: flex;
    }
    .mkt-header--actions {
        margin-right: 20px;
    }
    .mkt-header--actions-link {
        display: inline-block;
    }
}

@media $base-desktop {
    .mkt-header-child--link-list {
        padding: 0 250px;
    }
}
